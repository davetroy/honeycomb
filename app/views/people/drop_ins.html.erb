<table width="800px">
  <tr>
    <th>Name</th>
    <th>Owed</th>
    <th>Paid</th>
  </tr>
<% @people.each do |person| %>
  <tr class="<%=cycle('even', 'odd')%>">
    <td><%=person.show_name%></td>
    <td><%=number_to_currency(person.total_due)%></td>
    <td><%=number_to_currency(person.payments.total)%></td>
  </tr>
<% end %>
</table>